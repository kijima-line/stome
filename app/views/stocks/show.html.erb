<%= notice %>
  <% if user_signed_in? %>
                        
    <p>
      <%= @stock.name %>
        <% if user_signed_in? && current_user.id == @stock.user_id %>
          <%= link_to 'タイトル編集' ,edit_stock_path(@stock.id),method: :get %>
            <%= link_to '削除' ,stock_path(@stock.id),method: :delete %>
    </p>
    <%= form_with model: [@stock, @mee], id: "comment-form" do |f| %>
      <%= f.time_select :created_at,{:minute_step => 10},class: ''%>
        <%= f.text_field :text , class: "comment-text"%>

          <%= f.submit "ルーティンを登録する", class: "comment-submit" %>
            <% end %>
              <% end %>
                <div id="comments">
                  <h4>＜ルーティン一覧＞</h4>
                  <% @mees.each do |mee| %>
                    <div class="comment">
                      <p class="user-info"> </p>
                      <p>
                        <%= l mee.created_at%>
                          <%= mee.text%>
                      </p>
                      <% end %>
                        <% end %>


